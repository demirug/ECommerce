{% extends 'base.jinja' %}

{% block title %}{{ _("Payed") }}{% endblock title %}
{% block body %}
{% csrf_token %}
    <div class="container">
        <center>
            <div class="mx-5 my-5 py-5" style="border: 2px black solid">
                <h4>Order # {{ object.id }} confirmed</h4>
                <hr>
                {% if object.track %}
                    <p>Track number: {{ object.track }}</p>
                {% endif %}
                <p>Thanks for choosing us</p>
                <a href="{{ url("products:list") }}" class="btn btn-primary">{{ _("To main") }}</a>
            </div>
        </center>
    </div>
{% endblock body %}